{{#if routeInfo.children}}
  {{#frost-button
    priority="tertiary"
    size="medium"
  }}
    {{text}}
  {{/frost-button}}
  <ul>
    {{#each routeInfo.children as |childRouteInfo|}}
      {{menu-item
        relativePath=routePath
        routeInfo=childRouteInfo
      }}
    {{/each}}
  </ul>
{{else}}
  {{#frost-link
    routePath
    priority="secondary"
    size="medium"
  }}
    {{text}}
  {{/frost-link}}
{{/if}}
